<Page x:Class="JustDrag.Controller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustDrag"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCapture" Grid.Column ="0" Content="Capture"/>
        <Button x:Name="btnTransform" Grid.Column ="1" Content="Image2Text"/>
        <Button x:Name="btnReset" Grid.Column ="2" Content="Reset"/>
        <Button x:Name="btnSettings" Grid.Column ="3" Content="Settings"/>
    </Grid>
</Page>
